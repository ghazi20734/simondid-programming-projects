    <TableLayout android:id="@+id/tableLayout1" android:layout_height="fill_parent" android:layout_width="67dp">
        <TableRow android:id="@+id/tableRow1" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content">
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"></TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"></TableRow>
        <TableRow android:layout_gravity="bottom" android:id="@+id/tableRow3" android:baselineAligned="false" android:layout_weight="1" android:layout_height="0dp" android:layout_width="fill_parent">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button1" android:text="Button"></Button>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
